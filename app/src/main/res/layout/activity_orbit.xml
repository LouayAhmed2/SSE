        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dry_weight_kg"
        android:textColor="@color/Red"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewthirtenn" />

    <TextView
        android:id="@+id/DryWeightDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:textColor="@color/White"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        app:layout_constraintTop_toBottomOf="@id/viewthirtenn" />

    <View
        android:id="@+id/viewfourtin"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/DryWeightDicription" />

    <TextView
        android:id="@+id/FuelCapacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fuel_capacity"
        android:textColor="@color/Red"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewfourtin" />

    <TextView
        android:id="@+id/Fuel_CapacityDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.5 L"
        android:textColor="@color/White"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
