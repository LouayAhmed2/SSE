<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:stretchColumns="1"
    android:padding="8dp"
    android:background="@color/Black"
    tools:context=".FiddleThree">

    <TextView
        android:id="@+id/engineType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/engine_type"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textColor="@color/Red"
        />
    <TextView
        android:id="@+id/endineTypedicription"
        android:layout_width="wrap_content"
        android:textColor="@color/White"

        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        android:text="4-stroke,forced air cooled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/viewone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/endineTypedicription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/Displacement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/displacement"
        app:layout_constraintTop_toBottomOf="@id/viewone"
        android:textStyle="bold"
        android:textColor="@color/Red"
        />
    <TextView
        android:id="@+id/Displacementdicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        android:text="150cc"
        android:textColor="@color/White"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewone"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/viewtwo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/Displacementdicription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/Cooling_System"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/cooling_system"
        app:layout_constraintTop_toBottomOf="@id/viewtwo"
        android:textStyle="bold"
        android:textColor="@color/Red"
        />
    <TextView
        android:id="@+id/CoolingSystemDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        android:text="@string/air"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/White"
        app:layout_constraintTop_toBottomOf="@id/viewtwo"
        />
    <View
        android:id="@+id/viewthree"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/CoolingSystemDicription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/Fuel_System"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/fuel_system"
        app:layout_constraintTop_toBottomOf="@id/viewthree"
        android:textStyle="bold"
        android:textColor="@color/Red"
        />
    <TextView
        android:id="@+id/Fuel_SystemDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        android:text="Carburetor"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/White"
        app:layout_constraintTop_toBottomOf="@id/viewthree"
        />

    <View
        android:id="@+id/viewfour"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/Fuel_SystemDicription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/Transmission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/Transmission"
        app:layout_constraintTop_toBottomOf="@id/viewfour"
        android:textStyle="bold"
        android:textColor="@color/Red"
        />
    <TextView
        android:id="@+id/TransmissionDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        android:text="C.V.T."
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/White"
        app:layout_constraintTop_toBottomOf="@id/viewfour"
        />
    <View
        android:id="@+id/viewfive"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/TransmissionDicription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/FrontSuspension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/front_suspension"
        app:layout_constraintTop_toBottomOf="@id/viewfive"
        android:textStyle="bold"
        android:textColor="@color/Red"
        />
    <TextView
        android:id="@+id/FrontSuspensionDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        android:text="@string/telescopic_fork"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/White"
        app:layout_constraintTop_toBottomOf="@id/viewfive"
        />
    <View
        android:id="@+id/viewsix"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/FrontSuspensionDicription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/Rear_Suspension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/rear_suspension"
        app:layout_constraintTop_toBottomOf="@id/viewsix"
        android:textStyle="bold"
        android:textColor="@color/Red"
        />
    <TextView
        android:id="@+id/RearSuspensionDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        android:text="@string/unit_swing"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/White"
        app:layout_constraintTop_toBottomOf="@id/viewsix"
        />
    <View
        android:id="@+id/viewseven"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/RearSuspensionDicription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/Front_Break"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/front_break"
        app:layout_constraintTop_toBottomOf="@id/viewseven"
        android:textStyle="bold"
        android:textColor="@color/Red"
        />
    <TextView
        android:id="@+id/FrontBreakDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        android:text="Disk 190mm"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/White"
        app:layout_constraintTop_toBottomOf="@id/viewseven"
        />
    <View
        android:id="@+id/vieweight"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/FrontBreakDicription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/RearBreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/rear_break"
        app:layout_constraintTop_toBottomOf="@id/vieweight"
        android:textStyle="bold"
        android:textColor="@color/Red"
        />
    <TextView
        android:id="@+id/RearBreakDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        android:text="@string/disk_190mm"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/White"
        app:layout_constraintTop_toBottomOf="@id/vieweight"
        />
    <View
        android:id="@+id/viewnine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/RearBreakDicription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/FrontTier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Front Tier"
        app:layout_constraintTop_toBottomOf="@id/viewnine"
        android:textStyle="bold"
        android:textColor="@color/Red"
        />
    <TextView
        android:id="@+id/FrontTierDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        android:text="@string/_110_70_12"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/White"
        app:layout_constraintTop_toBottomOf="@id/viewnine"
        />
    <View
        android:id="@+id/viewten"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/FrontTierDicription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/RearTier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/rear_tier"
        app:layout_constraintTop_toBottomOf="@id/viewten"
        android:textStyle="bold"
        android:textColor="@color/Red"
        />
    <TextView
        android:id="@+id/RearTierDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        android:text="@string/_120_70_12"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/White"
        app:layout_constraintTop_toBottomOf="@id/viewten"
        />
    <View
        android:id="@+id/vieweleven"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/RearTierDicription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/L_w_H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/l_w_h_mm"
        app:layout_constraintTop_toBottomOf="@id/vieweleven"
        android:textStyle="bold"
        android:textColor="@color/Red"
        />
    <TextView
        android:id="@+id/L_w_HDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        android:text="@string/_1870_x_695_x_1150"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/White"
        app:layout_constraintTop_toBottomOf="@id/vieweleven"
        />
    <View
        android:id="@+id/viewtwelve"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/L_w_HDicription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/Wheelbase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/wheelbase_mm"
        app:layout_constraintTop_toBottomOf="@id/viewtwelve"
        android:textStyle="bold"
        android:textColor="@color/Red"
        />
    <TextView
        android:id="@+id/WheelbaseDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        android:text="@string/_1320"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/White"
        app:layout_constraintTop_toBottomOf="@id/viewtwelve"
        />
    <View
        android:id="@+id/viewthirtenn"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/WheelbaseDicription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/DryWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/dry_weight_kg"
        app:layout_constraintTop_toBottomOf="@id/viewthirtenn"
        android:textStyle="bold"
        android:textColor="@color/Red"
        />
    <TextView
        android:id="@+id/DryWeightDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        android:text="107"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/White"
        app:layout_constraintTop_toBottomOf="@id/viewthirtenn"
        />
    <View
        android:id="@+id/viewfourtin"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/DryWeightDicription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/FuelCapacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/fuel_capacity"
        app:layout_constraintTop_toBottomOf="@id/viewfourtin"
        android:textStyle="bold"
        android:textColor="@color/Red"
        />
    <TextView
        android:id="@+id/Fuel_CapacityDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        android:text="6.5L"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/White"
        app:layout_constraintTop_toBottomOf="@id/viewfourtin"
        />
    <View
        android:id="@+id/viewfiveteen"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FuelCapacity" />

    <TextView
        android:id="@+id/TopSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/top_speed_km_hr"
        android:textColor="@color/Red"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewfiveteen" />

    <TextView
        android:id="@+id/TopSpeedeDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 100"
        android:textColor="@color/White"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        app:layout_constraintTop_toBottomOf="@id/viewfiveteen" />

    <View
        android:id="@+id/viewsixteen"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TopSpeed" />

    <TextView
        android:id="@+id/Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textColor="@color/Red"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewsixteen" />

    <TextView
        android:id="@+id/PriceDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/le_21_430"
        android:textColor="@color/White"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        app:layout_constraintTop_toBottomOf="@id/viewsixteen" />

    <ImageButton
        android:id="@+id/DisplayFiddle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:onClick="open"
        android:scaleType="centerCrop"
        android:src="@drawable/fiddlethree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PriceDicription" />



</androidx.constraintlayout.widget.ConstraintLayout>

