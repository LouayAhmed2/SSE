        android:id="@+id/PriceDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 18,000 LE"
        android:textColor="@color/White"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
        app:layout_constraintTop_toBottomOf="@id/viewsixteen" />

    <ImageButton
        android:id="@+id/DisplayOrbit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:onClick="open"
        android:scaleType="centerCrop"
        android:src="@drawable/orbittwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PriceDicription" />


