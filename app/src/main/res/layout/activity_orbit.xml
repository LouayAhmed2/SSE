        app:layout_constraintTop_toBottomOf="@id/FuelCapacity" />

    <TextView
        android:id="@+id/TopSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/top_speed_km_hr"
        android:textColor="@color/Red"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewfiveteen" />

    <TextView
        android:id="@+id/TopSpeedeDicription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 90"
        android:textColor="@color/White"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/TopSpeed"
